<div class="container">
	<div class="row align-items-center">
		<div class="col-md-12">
			<div class="row text-center">
				<img class="center" src="http://food.fnr.sndimg.com/content/dam/images/food/fullset/2012/5/4/2/FNM_060112-Grilled-Burger-Recipe_s4x3.jpg.rend.hgtvcom.406.305.suffix/1371606262739.jpeg">
			</div>
			<h1 class="text-center">Welcome to Eat-Da-Burger</h1>
		</div>
	</div>

	<div class="row text-center bg-danger">
		<div class="col-md-6">
			<h3>Burgers to be eaten!</h3>

			<ul class="list-group">
	  			{{#each burgers}}
	  			{{#unless devoured}}
	  				{{> burgers/burger-block devoured=false}}
	  			{{/unless}}
	  			{{/each}}
			</ul>

		</div>

		<div class="col-md-6">
			<h3>Burgers that have been eaten previously!</h3>

			<ul class="list-group">
				{{#each burgers}}
					{{#if devoured}}
						{{> burgers/burger-eaten devoured=true}}
					{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>

<div class="row text-center">
<div class="col-md-12">
<h2>Enter a burger you want to eat, then click the "Submit" button.</h2>

<form action="/api/burgers" method="POST">
	<textarea type="text" class="form-control" rows="4" name="burger_name"></textarea>

	<button class="create-form" type="submit">Submit</button>
</form>
</div>
</div>
</div>